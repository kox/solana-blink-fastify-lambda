{
  "name": "fastify-lambda-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/functions/server.js",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "ts-node-dev ./src/main.ts | pino-pretty --colorize",
    "update:packages": "npx npm-check-updates -u",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "eslint --fix '{src,test}/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --config test/jest.json --runInBand --passWithNoTests --forceExit"
  },
  "keywords": [
    "fastify",
    "lambda",
    "server",
    "kox",
    "solana",
    "blinks"
  ],
  "packageManager": "^pnpm@9.7.1",
  "license": "MIT",
  "author": "kox <https://www.github.com/kox>",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^7.0.4",
    "@solana/actions": "^1.6.1",
    "@solana/web3.js": "^1.95.2",
    "bn.js": "^5.2.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "joi": "^17.13.3",
    "pino": "^9.3.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/eslint": "9.6.0",
    "@types/eslint-config-prettier": "~6.11.3",
    "@types/eslint-plugin-prettier": "3.1.3",
    "@types/http-errors": "2.0.4",
    "@types/jest": "29.5.12",
    "@types/lint-staged": "~13.3.0",
    "@types/node": "22.3.0",
    "@types/nodemon": "1.19.6",
    "@types/tap": "~15.0.11",
    "@typescript-eslint/eslint-plugin": "8.1.0",
    "@typescript-eslint/parser": "8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "lint-staged": "15.2.9",
    "nodemon": "3.1.4",
    "nyc": "17.0.0",
    "pino-pretty": "11.2.2",
    "prettier": "3.3.3",
    "stop-only": "^3.3.3",
    "tap": "21.0.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.5.4"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": [
      "prettier --write '{src,test}/**/*.ts'",
      "eslint --fix",
      "stop-only --file"
    ]
  }
}
